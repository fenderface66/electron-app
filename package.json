{
  "name": "electron-forge-react-typescript",
  "productName": "electron-forge-react-typescript",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/main/index.ts",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "tslint --project tsconfig.json --type-check --force"
  },
  "keywords": [],
  "author": "robbieheygate",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn"
      },
      "electronWinstallerConfig": {
        "name": "electron_forge_react_typescript"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "electronforgereacttypescript"
      },
      "electronWebpack": {
        "main": {
          "sourceDirectory": "src/main"
        },
        "renderer": {
          "sourceDirectory": "src/renderer"
        },
        "whiteListedModules": ["react", "react-dom"]
      }
    }
  },
  "dependencies": {
    "@types/electron-devtools-installer": "^2.0.2",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^0.14.20",
    "electron-compile": "^6.4.4",
    "electron-devtools-installer": "^2.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^16.10.2",
    "react-dom": "^16.8.6",
    "tslib": "^1.4.0"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron": "^6.0.12",
    "electron-forge": "^5.2.4",
    "electron-prebuilt-compile": "4.0.0",
    "electron-webpack": "^2.7.4",
    "electron-webpack-ts": "^3.2.0",
    "tslint": "^5.1.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2"
  }
}
